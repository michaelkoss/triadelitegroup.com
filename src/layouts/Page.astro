---
import '../styles/global.css';
import { SITE_TITLE, SITE_DESCRIPTION, COMPANY_NAME, WEBSITE_URL, LINKEDIN_URL, FACEBOOK_URL, INSTAGRAM_URL } from '../consts';

interface Props {
  title?: string;
  description?: string;
}

const { title = SITE_TITLE, description = SITE_DESCRIPTION } = Astro.props;

// JSON-LD structured data
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": COMPANY_NAME,
  "url": WEBSITE_URL,
  "description": description,
};
---

<!DOCTYPE html>
<html lang="en" class="bg-neutral-100 dark:bg-neutral-950 font-sans h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  </head>
  <body class="m-0 p-0 min-h-full flex flex-col">
    <header class="bg-black text-white px-8 py-2 lg:py-2">
      <nav class="flex flex-col lg:flex-row lg:items-end items-center justify-between gap-1 lg:gap-6">
        <a href="/" class="flex items-center shrink-0 pb-4 lg:pb-0">
          <img src="/img/triad-logo-white.png" alt="Triad Elite Group" class="h-32 w-auto object-contain" />
        </a>
        <div class="flex flex-wrap justify-center lg:justify-end gap-6 lg:gap-8">
          <a href="/about" class="text-primary-400 no-underline font-medium uppercase tracking-wide hover:text-white transition-colors">About Us</a>
          <a href="/capabilities" class="text-primary-400 no-underline font-medium uppercase tracking-wide hover:text-white transition-colors">Capabilities</a>
          <a href="/leadership" class="text-primary-400 no-underline font-medium uppercase tracking-wide hover:text-white transition-colors">Leadership</a>
          <a href="/connect" class="text-primary-400 no-underline font-medium uppercase tracking-wide hover:text-white transition-colors">Connect</a>
        </div>
      </nav>
    </header>
    <main class="max-w-3xl mx-auto my-8 px-8 bg-white dark:bg-neutral-900 text-neutral-900 dark:text-neutral-50 py-8 rounded-lg shadow-md dark:shadow-2xl flex-grow">
      <slot />
    </main>
    <footer class="bg-neutral-800 dark:bg-neutral-950 text-white p-6 mt-8 border-t border-neutral-700 dark:border-neutral-800">
      <div class="flex flex-col lg:flex-row lg:justify-between lg:items-center gap-6">
        <!-- Copyright - Left on lg+, Top on mobile -->
        <p class="m-0 text-center lg:text-left">&copy; 2025 Triad Elite Group. All rights reserved.</p>
        <!-- Social Links - Right on lg+, Bottom on mobile -->
        <div class="flex justify-center lg:justify-end gap-4">
          <a href={LINKEDIN_URL} target="_blank" rel="noopener noreferrer" class="hover:opacity-80 transition-opacity">
            <img src="/img/linkedin-icon.png" alt="LinkedIn" class="w-10 h-10 object-contain" />
          </a>
          <a href={FACEBOOK_URL} target="_blank" rel="noopener noreferrer" class="hover:opacity-80 transition-opacity">
            <img src="/img/facebook-icon.png" alt="Facebook" class="w-10 h-10 object-contain" />
          </a>
          <a href={INSTAGRAM_URL} target="_blank" rel="noopener noreferrer" class="hover:opacity-80 transition-opacity">
            <img src="/img/instagram-icon.png" alt="Instagram" class="w-10 h-10 object-contain" />
          </a>
        </div>
      </div>
    </footer>
  </body>
</html>

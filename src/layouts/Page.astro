---
import '../styles/global.css';
import { SITE_TITLE, SITE_DESCRIPTION, COMPANY_NAME, WEBSITE_URL } from '../consts';

interface Props {
  title?: string;
  description?: string;
}

const { title = SITE_TITLE, description = SITE_DESCRIPTION } = Astro.props;

// JSON-LD structured data
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": COMPANY_NAME,
  "url": WEBSITE_URL,
  "description": description,
};
---

<!DOCTYPE html>
<html lang="en" class="bg-neutral-100 dark:bg-neutral-950 font-sans">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  </head>
  <body class="m-0 p-0">
    <header class="bg-black text-white px-8 py-2 lg:py-2">
      <nav class="flex flex-col lg:flex-row lg:items-end items-center justify-between gap-1 lg:gap-6">
        <a href="/" class="flex items-center shrink-0 pb-4 lg:pb-0">
          <img src="/img/triad-logo-white.png" alt="Triad Elite Group" class="h-32 w-auto object-contain" />
        </a>
        <div class="flex flex-wrap justify-center lg:justify-end gap-6 lg:gap-8">
          <a href="/about" class="text-primary-400 no-underline font-medium uppercase tracking-wide hover:text-white transition-colors">About Us</a>
          <a href="/capabilities" class="text-primary-400 no-underline font-medium uppercase tracking-wide hover:text-white transition-colors">Capabilities</a>
          <a href="/industry" class="text-primary-400 no-underline font-medium uppercase tracking-wide hover:text-white transition-colors">Industry</a>
          <a href="/leadership" class="text-primary-400 no-underline font-medium uppercase tracking-wide hover:text-white transition-colors">Leadership</a>
          <a href="/connect" class="text-primary-400 no-underline font-medium uppercase tracking-wide hover:text-white transition-colors">Connect</a>
        </div>
      </nav>
    </header>
    <main class="max-w-3xl mx-auto my-8 px-8 bg-white dark:bg-neutral-900 text-neutral-900 dark:text-neutral-50 min-h-[60vh] py-8 rounded-lg shadow-md dark:shadow-2xl">
      <slot />
    </main>
    <footer class="bg-neutral-800 dark:bg-neutral-950 text-white text-center p-6 mt-8 border-t border-neutral-700 dark:border-neutral-800">
      <p class="m-0">&copy; 2025 Triad Elite Group. All rights reserved.</p>
    </footer>
  </body>
</html>

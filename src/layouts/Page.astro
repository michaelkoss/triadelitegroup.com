---
import '../styles/global.css';

interface Props {
  title?: string;
}

const { title = 'Triad Elite Group' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="bg-neutral-100 dark:bg-neutral-950 font-sans">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="m-0 p-0">
    <header class="bg-primary-700 dark:bg-primary-600 text-white px-8 py-4">
      <nav class="flex gap-6 mb-4">
        <a href="/" class="text-white no-underline font-medium hover:underline hover:text-primary-100">Home</a>
        <a href="/about" class="text-white no-underline font-medium hover:underline hover:text-primary-100">About</a>
      </nav>
      <h1 class="my-2 text-4xl">Triad Elite Group</h1>
    </header>
    <main class="max-w-3xl mx-auto my-8 px-8 bg-white dark:bg-neutral-900 text-neutral-900 dark:text-neutral-50 min-h-[60vh] py-8 rounded-lg shadow-md dark:shadow-2xl">
      <slot />
    </main>
    <footer class="bg-neutral-800 dark:bg-neutral-950 text-white text-center p-6 mt-8 border-t border-neutral-700 dark:border-neutral-800">
      <p class="m-0">&copy; 2025 Triad Elite Group. All rights reserved.</p>
    </footer>
  </body>
</html>
